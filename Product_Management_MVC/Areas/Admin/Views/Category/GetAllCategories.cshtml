@using Entities.Concretes
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}
<div>
    <h2>Categories</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in ViewBag.categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <form asp-action="UpdateCategory" method="post">
                            <input type="hidden" name="id" value="@item" />
                            <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to update this category?');">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteCategoryById" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
